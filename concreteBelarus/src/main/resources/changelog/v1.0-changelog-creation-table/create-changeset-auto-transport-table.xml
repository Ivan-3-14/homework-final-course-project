<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create_table_capacity" author="ivan">

        <createTable tableName="auto_transport">
            <column name="id" autoIncrement="true" type="int">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="car_number" type="varchar(8)" />
            <column name="capacity_id" type="int" />

        </createTable>
    </changeSet>

    <changeSet id="add-foreign-key-constraint-to-auto-transport" author="ivan">
        <addForeignKeyConstraint
                baseColumnNames="capacity_id"
                baseTableName="auto_transport"
                baseTableCatalogName="concretebelarus"
                constraintName="fk_capacity_id"
                onUpdate="CASCADE"
                onDelete="NO ACTION"
                referencedColumnNames="id"
                referencedTableName="capacity"
                referencedTableCatalogName="concretebelarus"
                referencedTableSchemaName="concretebelarus"
        />
    </changeSet>
</databaseChangeLog>
<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <persistence-unit name="ivan">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>application.datalevel.entities.autotransportation.AutoTransport</class>
        <class>application.datalevel.entities.autotransportation.AutoPrice</class>
        <class>application.datalevel.entities.autotransportation.AutoCapacity</class>

        <class>application.datalevel.entities.concreteentities.Concrete</class>
        <class>application.datalevel.entities.concreteentities.ConcreteGrade</class>
        <class>application.datalevel.entities.concreteentities.Mobility</class>
        <class>application.datalevel.entities.concreteentities.ConcretePrice</class>

        <class>application.datalevel.entities.users.User</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/concreteBelarus?createDatabaseIfNotExist=true"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="hibernate.dialect.storage_engine" value="innodb"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.pool_size" value="30"/>
            <property name="hibernate.connection.isolation" value="4"/>
        </properties>
    </persistence-unit>
</persistence>